@model LoginViewModel
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
	  <title>Educacion It</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="/css/login/login.css" rel="stylesheet" />

	</head>
	<body class="img js-fullheight" style="background-image: url(/images/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Educacion It</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
				  <h3 class="mb-4 text-center">Iniciar Sesion</h3>
				  <form action="Login/SignIn" method="post" id="form-login" class="signin-form">
					  <div class="form-group">
			
								@Html.EditorFor(model => model.Mail, new { htmlAttributes = new {@class = "form-control", @placeholder="Mail", @type="email", @required="required"}})
					  </div>
				<div class="form-group">
								@Html.EditorFor(model => model.Password, new { htmlAttributes = new {@class = "form-control", @placeholder="Contraseña", @type="password", @required="required"}})
				  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
				</div>
				<div class="form-group">
								
					<p class="ml-1">@ViewBag.ErrorLogin</p>
					
				</div>
				<div class="form-group">
					<button type="submit" class="form-control btn btn-primary submit px-3">Ingresar</button>
				</div>
				<div class="form-group d-md-flex">
					<div class="w-50">
						<label class="checkbox-wrap checkbox-primary" for="Recuerdame">Recuerdame
									 
										@Html.CheckBoxFor(model => model.Recuerdame)
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a style="color: #fff" asp-area="" asp-controller="Login" asp-action="OlvidoClave">Olvidaste tu contraseña?</a>
								</div>
				</div>
			  </form>
			  <p class="w-100 text-center">&mdash; o inicia con: &mdash;</p>
			  <div class="social d-flex text-center">
				  <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-google mr-2"></span> Google</a>
			  </div>
			  </div>
				</div>
			</div>
		</div>
	</section>

		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="/js/login/login.js"></script>
	</body>
</html>

